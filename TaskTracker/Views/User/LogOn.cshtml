@model TaskTracker.Models.ViewModels.UserLogOnViewModel

@{
    ViewBag.Title = "Log On";
}

<!-- JQuery Validation Plugin -->
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $('document').ready(function () {
        $('#submit').button();
        $(window).resize(function () {
            $('#login').position({
                my: 'center center',
                at: 'center center',
                of: '#page'
            })
        });
        $(window).resize();

        @Html.ValidationSummaryAlert("#alerts");
    });
</script>
<div id="login" class="ui-widget ui-widget-content ui-corner-all" style="width: 300px;">
	@using (Html.BeginForm())
    {
		<table style="margin-left: auto; margin-right: auto;">
			<tr>
				<td style="vertical-align: top;">@Html.LabelFor(m => m.UserName):</td>
				<td>
                    @Html.TextBoxFor(m => m.UserName)<br>
                    <span style="color: red;">@Html.ValidationMessageFor(m => m.UserName)</span>
                </td>
			</tr>
			<tr>
				<td style="vertical-align: top;">@Html.LabelFor(m => m.Password):</td>
				<td>
                    @Html.PasswordFor(m => m.Password)<br>
                    <span style="color: red;">@Html.ValidationMessageFor(m => m.Password)</span>
                </td>
			</tr>
			<tr>
				<td colspan="2" style="text-align: right;"><input type="submit" name="LogOn" id="LogOn" value="Log On" /></td>
			</tr>
		</table>
    }
</div>